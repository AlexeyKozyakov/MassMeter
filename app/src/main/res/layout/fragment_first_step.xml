<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.FirstStepFragment"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:id="@+id/first_step_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:background="@drawable/filled_circle"
                android:layout_margin="4dp"/>
            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:background="@drawable/empty_circle"
                android:layout_margin="5dp"/>
            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:background="@drawable/empty_circle"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:text="@string/firstStepName"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="23sp" />
        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/search_figure"
            android:hint="@string/figure_search_tooltip"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="69">
            <LinearLayout
                android:id="@+id/categories_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <ListView
                    android:choiceMode="singleChoice"
                    android:listSelector="#DDDDDD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:layout_marginRight="5dp"
                    android:id="@+id/category_view"
                    ></ListView>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BBB"/>
                <ListView
                    android:choiceMode="singleChoice"
                    android:listSelector="#DDDDDD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/figure_view"></ListView>
            </LinearLayout>
            <ListView
                android:choiceMode="singleChoice"
                android:listSelector="#DDDDDD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:id="@+id/figure_search"></ListView>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:orientation="horizontal">
            <Button
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:id="@+id/next_button"
                android:layout_centerHorizontal="true"
                android:background="@drawable/next_button"
                android:text="@string/nextButtonText"
                android:textColor="@drawable/next_button_text_color"
                />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/next_button"
                android:src="@drawable/info_icon"
                android:background="#FFF"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>